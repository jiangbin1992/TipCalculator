<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="18dp"
        android:elevation="10dp"
        android:id="@+id/titlebar"
        android:background="@color/colorMain"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_percent_icon_white"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/app_name"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorUpdate"
        android:paddingRight="25dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        android:paddingLeft="25dp"
        android:gravity="center_vertical"
        android:id="@+id/update"
        android:layout_below="@+id/titlebar"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="For Better Performance"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:background="@color/colorWhite"
            android:text="UPDATE"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/colorUpdate"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/update"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginBottom="70dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp"
                android:id="@+id/favourite"
                android:textColor="@color/colorMain"
                android:text="@string/Favourites"
                android:textSize="12sp"
                android:background="@drawable/not_selected_button"/>
            
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:id="@+id/favouriteRecycle"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp"
                android:textColor="@color/colorMain"
                android:text="@string/Percentage"
                android:textSize="12sp"
                android:background="@drawable/not_selected_button"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="15dp"
                android:id="@+id/percentageRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp"
                android:textColor="@color/colorMain"
                android:text="@string/maths"
                android:textSize="12sp"
                android:background="@drawable/not_selected_button"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="15dp"
                android:id="@+id/mathRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp"
                android:textColor="@color/colorMain"
                android:text="@string/gpa"
                android:textSize="12sp"
                android:background="@drawable/not_selected_button"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="15dp"
                android:id="@+id/gpaRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp"
                android:textColor="@color/colorMain"
                android:text="@string/General"
                android:textSize="12sp"
                android:background="@drawable/not_selected_button"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="15dp"
                android:id="@+id/generalRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>
            <FrameLayout
                android:id="@+id/nativeAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:elevation="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:id="@+id/menu"
            android:padding="20dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_centerVertical="true"
                android:layout_height="22dp"
                android:backgroundTint="@color/colorBlack"
                android:background="@drawable/ic_baseline_menu_24"
               />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chart"
                android:padding="20dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/colorBlack"
                    android:background="@drawable/ic_outline_shopping_cart_24"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fav"
                android:padding="20dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/colorBlack"
                    android:background="@drawable/ic_outline_favorite_border_24"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/download"
                android:padding="20dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="20.84dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/colorBlack"
                    android:background="@drawable/ic_download"
                   />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>