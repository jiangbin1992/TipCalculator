<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:padding="30dp"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/title"
        android:text="Update Percentage Calculator ?"
        android:textColor="#000"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="You can know get a new update of this app and enjoy the new feature of the app.
        \nThe app is updated from version v.1.0 to v.1.1"
        android:textColor="@color/colorGrey"
        android:textSize="14sp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/noThanks"
            android:textSize="14sp"
            android:text="No Thanks"
            android:textColor="@color/colorGreen"/>
        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/update"
            android:textSize="14sp"
            android:text="Update"
            android:background="@drawable/update_button"
            android:textColor="#fff"/>
    </LinearLayout>
    
</LinearLayout>